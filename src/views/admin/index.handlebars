<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
    <link rel="stylesheet" href="../assets/css/admin.css" />
    <script src="../assets/js/admin.js" defer></script>
</head>

<header class="topo flex container-padding">
    <img src="../assets/images/pizza-dev.png" alt="Pizza DEV" />
    <nav class="menu">
        <a href="/admin" class="active">Pizzas</a>
        <a href="/message">Mensagens</a>
        <a href="/user">Usuários</a>
        <a href="/logout">Sair</a>
    </nav>
</header>
<div class="pagina container">
    <div class="cabecalho flex">
        <a href="/pizza/create" class="botao">
            Nova Pizza
        </a>
    </div>
    <div class="tabela-responsiva">
        <table>
            <thead>
                <tr>
                    <th width="85">Foto</th>
                    <th>Pizza</th>
                    <th width="130">Brotinho</th>
                    <th width="130">Média</th>
                    <th width="130">Grande</th>
                    <th width="195" colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                    <tr>
                        <td>
                            <img src="../assets/images/{{foto}}" alt="" />
                        </td>
                        <td>
                            <h3>{{nome}}</h3>
                            <p>{{descricao}}</p>
                        </td>
                        <td>
                            R$ {{precoBrotinho}}
                        </td>
                        <td>
                            R$ {{precoMedia}}
                        </td>
                        <td>
                            R$ {{precoGrande}}
                        </td>
                        <td>
                            <a href="/pizza/update/{{id}}" class="btn-editar">
                                <i class="fa-solid fa-pen-to-square"></i> Editar
                            </a>
                        </td>
                        <td>
                            <a href="/pizza/delete/{{id}}" class="btn-excluir">
                                <i class="fa-regular fa-trash-can"></i> Excluir
                            </a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>