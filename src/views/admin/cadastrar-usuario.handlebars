<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
    <link rel="stylesheet" href="../assets/css/admin.css" />
    <script src="../assets/js/admin.js" defer></script>
</head>

<header class="topo flex container-padding">
    <img src="../assets/images/pizza-dev.png" alt="Pizza DEV" />
    <nav class="menu">
        <a href="/admin">Pizzas</a>
        <a href="/message">Mensagens</a>
        <a href="/user" class="active">Usuários</a>
        <a href="/logout">Sair</a>
    </nav>
</header>
<div class="pagina container">
    <div class="cabecalho flex bordered">
        <h1>Cadastrar Usuário</h1>
        <a href="/user" class="botao">
            Voltar
        </a>
    </div>

    {{#with response}}
        {{#if error}}
            <div class="msg-erro">
                {{ message }}
            </div>
        {{/if}}
        {{#unless error}}
            <div class="msg-sucesso">
                {{ message }}
            </div>
        {{/unless}}
    {{/with}}
    

    <form action="" method="post">
        <input type="text" name="nomeCompleto" id="nomeCompleto" class="input-field" placeholder="* Nome completo" required/>
        <input type="text" name="usuario" id="usuario" class="input-field" placeholder="* Usuário" required/>
        <input type="password" name="senha" id="senha" class="input-field" placeholder="* Senha" required/>
        <input type="password" name="confirmacaoSenha" id="confirmacaoSenha" class="input-field"
            placeholder="* Confirmar senha" required/>
        <button type="submit" class="botao">
            Cadastrar
        </button>
    </form>
</div>